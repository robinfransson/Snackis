@page
@model SnackisForum.Pages.ProfileModel

@inject SnackisForum.Injects.UserProfile profile;
@{
}

<div class="container-fluid rounded bg-secondary">
    <div class="container w-75 bg-dark text-light rounded mt-3 pb-1">
        <div class="row">
            <h1 class="pt-3 ps-5">@profile.Username</h1>
        </div>
        <form enctype="multipart/form-data" method="post">
            <dl>
                <dt>
                    <label for="ProfilePicture">Välj en bild</label>
                </dt>
                <dd>
                    <input asp-for="ProfilePicture" type="image" required>
                </dd>
            </dl>
            <input asp-page-handler="Upload" class="btn" type="submit" value="Ladda upp" />
        </form>
    </div>
</div>