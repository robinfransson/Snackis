@using Microsoft.AspNetCore.Identity;
@using SnackisDB.Models.Identity;
@inject UserManager<SnackisUser> userManager;
@inject SignInManager<SnackisUser> signInManager;
@inject SnackisDB.Models.SnackisContext context;
@inject SnackisForum.Injects.UserProfile profile;

@{
    bool loggedIn = signInManager.IsSignedIn(User);

    SnackisUser currentUser = loggedIn ? userManager.GetUserAsync(User).Result : null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script type="text/javascript" src="~/js/jquery-3.6.0.js"></script>

    <script type="text/javascript" src="~/js/jstree.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">

</head>
<body class="min-vh-100 bg-secondary">
    @Html.AntiForgeryToken()
    <header class="">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex" style="height:3rem;">
            <div class="flex-column ps-5">
                <a class="navbar-brand" href="/"><span class="material-icons-outlined px-2">
    question_answer
</span>Snackis</a>
            </div>
            <div class="col d-flex justify-content-center noselect" style="height:100%;width:100%;z-index:5">

            </div>
            <div class="col d-flex justify-content-end noselect">
                @if(loggedIn)
            {
                    <partial name="_Messages" />
                }
                <div class="btn-group ">
                    <span class="material-icons navbar-icon my-auto text-white" dropdown-toggle" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false" style="cursor: pointer">
                        account_circle
                    </span>
                    @if (!loggedIn)
                    {


                        <div class="dropdown-menu dropdown-menu-end">
                            <form class="px-4 py-3 login-form">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="exampleDropdownFormEmail1">Användarnamn</label>
                                    <input type="text" class="form-control" name="username" placeholder="Användarnamn">
                                </div>
                                <div class="form-group">
                                    <label for="exampleDropdownFormPassword1">Lösenord</label>
                                    <input type="password" class="form-control" name="password" placeholder="Lösenord">
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="remember" name="remember">
                                    <label class="form-check-label" for="dropdownCheck">
                                        Kom ihåg mig
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary">Logga in</button>

                            </form>
                            <div class="dropdown-divider"></div>
                            <div class="dropdown-item" data-toggle="modal" data-target="#exampleModal" onclick="$('#registerModal').modal('show')">Registrera ny användare</div>
                            <a class="dropdown-item" href="#">Glömt lösenord</a>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown-menu dropdown-menu-end">
                            <div class="dropdown-item">@currentUser.UserName</div>
                            <div class="dropdown-divider"></div>
                            <div class="dropdown-item clickable" data-toggle="modal" data-target="#exampleModal" onclick="$('#registerModal').modal('show')">Inloggad</div>
                            <div class="dropdown-item clickable" id="" onclick="logout()">Logga ut</div>
                        </div>
                    }
                </div>
            </div>
            <div class="me-5 pe-5">

            </div>
        </nav>
    </header>
    @if (!loggedIn)
    {
        <!-- Modal -->
        <div class="modal fade " id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Skapa ny användare</h5>
                        <button type="button" class="close rounded" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="registerForm">
                        <div class="modal-body">
                            <label for="email" class="form-label">Epost</label>
                            <input type="email" class="form-control" id="email" name="email">
                            <label for="username" class="form-label">Användarnamn</label>
                            <input type="text" class="form-control" id="username" name="username">
                            <label for="email" class="form-label">Lösenord</label>
                            <input type="password" class="form-control" id="password" name="password">
                            @Html.AntiForgeryToken();
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                            <button type="submit" class="btn btn-primary">Registrera</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }
    else
    {

        <!-- Modal -->
        <div class="modal fade " id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">@userManager.FindByIdAsync(userManager.GetUserId(User)).Result</h5>
                        <button type="button" class="close rounded" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="registerForm">
                        <div class="modal-body">
                            <label for="email" class="form-label">Epost</label>
                            <input type="email" class="form-control" id="email" name="email">
                            <label for="username" class="form-label">Användarnamn</label>
                            <input type="text" class="form-control" id="username" name="username">
                            <label for="email" class="form-label">Lösenord</label>
                            <input type="password" class="form-control" id="password" name="password">
                            @Html.AntiForgeryToken()
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                            <button type="submit" class="btn btn-primary">Registrera</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }
    <div class="container-fluid p-0">
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
